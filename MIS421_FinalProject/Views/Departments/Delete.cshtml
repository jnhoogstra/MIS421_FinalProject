@model MIS421_FinalProject.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Department</h6>
    </div>
    <div class="card-body">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    Department Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.deptName)
                </dd>
                <dt class="col-sm-2">
                    Street Address
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.deptAddress)
                </dd>
                <dt class="col-sm-2">
                    City
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.deptCity)
                </dd>
                <dt class="col-sm-2">
                    State
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.deptState)
                </dd>
                <dt class="col-sm-2">
                    Zipcode
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.deptZip)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="deptID" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index">Back to List</a>
            </form>

            <p>Are you sure you want to delete this? Once deleted, the item cannot be recovered from the database.</p>
        </div>

    </div>

</div>
