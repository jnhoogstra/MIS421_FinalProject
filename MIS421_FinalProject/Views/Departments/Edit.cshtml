            </div>
            <div class="form-group">
                <label asp-for="deptCity" class="control-label">City</label>
                <input asp-for="deptCity" class="form-control" />
                <span asp-validation-for="deptCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="deptState" class="control-label">State</label>
                <input asp-for="deptState" class="form-control" />
                <span asp-validation-for="deptState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="deptZip" class="control-label">Zipcode</label>
                <input asp-for="deptZip" class="form-control" />
                <span asp-validation-for="deptZip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

