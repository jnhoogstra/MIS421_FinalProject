@model MIS421_FinalProject.Models.Department

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Department Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.deptName)
        </dd>
        <dt class="col-sm-2">
            Street Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.deptAddress)
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.deptCity)
        </dd>
        <dt class="col-sm-2">
            State
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.deptState)
        </dd>
        <dt class="col-sm-2">
            Zipcode
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.deptZip)
        </dd>
    </dl>
</div>
