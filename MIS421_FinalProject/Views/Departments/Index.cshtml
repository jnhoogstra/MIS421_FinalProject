@model IEnumerable<MIS421_FinalProject.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.deptName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.deptAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.deptCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.deptState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.deptZip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.deptCountry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.deptName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deptAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deptCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deptState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deptZip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deptCountry)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.deptID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.deptID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.deptID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
